[Unit]
Description=selenium test framework
After=syslog.target network.target

[Service]
ExecStart=/usr/bin/java -jar -Dwebdriver.chrome.driver=/usr/bin/chromedriver {{ selenium_install_dir }}/selenium/selenium-server-standalone-{{ selenium_version }}.jar -port {{ selenium_port }}

Restart=on-failure
RestartSec=20s

[Install]
WantedBy=multi-user.target
